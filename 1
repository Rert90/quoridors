#include <cstdlib>
#define L 17
#define C 17
using namespace std;

int i,j;
char m[L][C];
int NrZiduri1=10;
int NrZiduri2=10;
int ordine=0;
int finish=0;

void creareTabla(char m[L][C])
{    for(int i=1; i<=17; i++)
        {for(int j=1; j<=17; j++)
             {  if(i%2!=0)
                   {
                     if(j%2) m[i][j]='0';
                        else m[i][j]='1';
                   }    
            else m[i][j]='1';
             }
        }  
    m[1][9]='*';
    m[17][9]='+';
}

void AltJucator()
{
    if(ordine%2)
        cout<<"E randul lui *.   Ziduri ramase: "<<NrZiduri1<<endl;
    else cout<<"E randul lui +.   Ziduri ramase: "<<NrZiduri2<<endl;
}

void GasireJucator1(char m[L][C], int &x, int &y)
      {int i, j;
         for(i=1;i<17;i++)
         for(j=1;j<17;j++)
            if(m[i][j]=='*')
            {
                x=i;
                y=j;
                break;
            }
      }

 void GasireJucator2(char m[L][C] ,int &x, int &y)
      {int i, j;
         for(i=1;i<17;i++)
         for(j=1;j<17;j++)
            if(m[i][j]=='+')
            {
                x=i;
                y=j;
                break;
            }
      }
      
     
